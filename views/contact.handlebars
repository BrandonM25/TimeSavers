                        <form id="contact-form" name="contact-form" method="POST" action="send">
                            <div class="md-form">
                                <i class="fa fa-user prefix light-blue-text"></i>
                                <input type="text" id="form-name" class="form-control" name="name">
                                <label for="form-name">Your name</label>
                            </div>
                            <div class="md-form">
                                <i class="fa fa-envelope prefix light-blue-text"></i>
                                <input type="text" id="form-email" class="form-control" name="email">
                                <label for="form-email">Your email</label>
                            </div>
                            <div class="md-form">
                                <i class="fa fa-phone prefix light-blue-text"></i>
                                <input type="text" id="form-email" class="form-control" name="phone">
                                <label for="form-email">Your phone</label>
                            </div>
                            <div class="md-form">
                                <i class="fa fa-tag prefix light-blue-text"></i>
                                <input type="text" id="form-Subject" class="form-control" name="subject">
                                <label for="form-Subject">Subject</label>
                            </div>
                            <div class="md-form">
                                <i class="fa fa-pencil prefix light-blue-text"></i>
                                <textarea type="text" id="form-text" class="form-control md-textarea" rows="3"
                                    name="message"></textarea>
                                <label for="form-text">Message</label>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn light-blue">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
